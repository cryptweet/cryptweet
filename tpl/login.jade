doctype
html
head
    title= "Real time encrypted chat - Log In !"
    //- Include CSS
    link(rel='stylesheet', href='css/mint-choc/jquery-ui-1.10.4.custom.css')
    link(rel='stylesheet', href='css/Cryptweet.css')
    //- Include JQuery+UI and NodeJS 
    script(src='js/jquery-1.10.2.js', type="text/javascript")
    script(src='js/jquery-ui-1.10.4.custom.js', type="text/javascript")
    script(src='socket.io/socket.io.js', type="text/javascript")
    //- Crypto and tools
    //- @ToDo: replace jsEncrypt with pidCrypt 
    script(src='js/jsencrypt/bin/jsencrypt.min.js', type="text/javascript")
    script(src="js/pidCrypt/pidcrypt.js", type="text/javascript")
    script(src="js/pidCrypt/pidcrypt_util.js", type="text/javascript")
    //- needed for parsing decrypted rsa certificate
    script(src="js/pidCrypt/asn1.js", type="text/javascript")
    //- needed for rsa math operations
    script(src="js/pidCrypt/jsbn.js", type="text/javascript")
    //- needed for rsa key generation
    script(src="js/pidCrypt/rng.js", type="text/javascript")
    //- needed for rsa key generation
    script(src="js/pidCrypt/prng4.js", type="text/javascript")
    //- needed for rsa en-/decryption
    script(src="js/pidCrypt/rsa.js", type="text/javascript")

    //- script(src='js/library/convert.js', type="text/javascript")
    //- script(src='js/library/crypto_math.js', type="text/javascript")
    //- script(src='js/library/biginteger.js', type="text/javascript")
    //- Sound notification jQuery plugin
    script(src='js/ion-sound/ion.sound.min.js', type="text/javascript")
    //- FileReader-API helper
    script(src='js/filereader.js', type="text/javascript")
    //- Include Cryptweet
    script(src='js/functions.js', type="text/javascript")
    script(src='js/login.js', type="text/javascript")
body
    #tabs
        ul
            li
                a(href="#tabs-1") Cryptweet
        #tabs-1
            h2 Welcome to Cryptweet !
            .controls
                | Default Nickname
                br
                input#default_nickname(class="nickname", placeholder="Anonymous")
                br
                | If you don't have a private key, you can generate one by clicking  
                input#bt_gen_keys(type='button', value='Generate keys for me !')
                br
                | Load your private key from the disk:   
                input#bt_pick_prk(type='file', label='Choose file')
                br
                | or paste it here (it will NEVER be uploaded !!!): 
                br
                textarea#private_key(class="keybox")
                input#bt_load_keys(type='button', value='LOAD KEYS')
                br
                | Load your contact's public key from the disk:   
                input#bt_pick_puk(type='file', label='Choose file')
                br
                | or paste it here and click CONNECT to create a new talk:
                br
                textarea#contact_public_key(class="keybox")
                input#bt_del_puk(type='button', value="Clear box")
                input#bt_connect_contact(type='button', value='CONNECT')
                br
                | Your public key (computed from private key):
                textarea#my_pubkey(class="keybox")
                textarea#srv_pubkey(class="keybox hidden")
                br
    br
    | Server and system log:
    br
    #server_msg(class="conversation")
